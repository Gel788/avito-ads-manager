# Настройки приложения
FLASK_APP=avito_ads.app
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-change-this

# Настройки базы данных
DATABASE_URL=sqlite:///instance/avito_db.sqlite3

# Настройки API Avito
AVITO_CLIENT_ID=your_client_id
AVITO_CLIENT_SECRET=your_client_secret
AVITO_API_URL=https://api.avito.ru/
AVITO_AUTH_URL=https://api.avito.ru/oauth2/token
AVITO_ACCESS_TOKEN=
AVITO_SCOPE=items

# Настройки планировщика
SCHEDULER_INTERVAL=5  # в минутах

# Настройки загрузки файлов
UPLOAD_FOLDER=avito_ads/static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=jpg,jpeg,png

# Ограничения для репостов
MAX_REPOST_COUNT=10
MAX_PHOTOS_PER_AD=10

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/app.log 